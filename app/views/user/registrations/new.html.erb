<div>
  <img
    class="mx-auto h-12 w-auto"
    src="https://tailwindui.com/img/logos/workflow-mark-indigo-600.svg"
    alt="Workflow"
  />

  <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
    <%= t(".form_title") %>
  </h2>

  <p class="mt-2 text-center text-sm text-gray-600">
    or
    <%= link_to t("actions.signin"), signin_path,
      class: "font-medium text-indigo-600 hover:text-indigo-500" %>
  </p>
</div>

<%= form_with model: @registration, class: "mt-8 space-y-6" do |f| %>
  <div class="rounded-md shadow-sm -space-y-px">
    <div>
      <%= f.label :name, class: 'sr-only' %>

      <%= f.text_field :name,
        autocomplete: :name,
        required: true,
        placeholder: t("common.full_name").titleize,
        class: "
          appearance-none
          rounded-none
          relative
          block
          w-full
          px-3
          py-2
          border
          border-gray-300
          placeholder-gray-500
          text-gray-900
          rounded-t-md
          focus:outline-none
          focus:ring-indigo-500
          focus:border-indigo-500
          focus:z-10
          sm:text-sm
        "
      %>
    </div>

    <div>
      <%= f.label :email, class: 'sr-only' %>

      <%= f.email_field :email,
        autocomplete: :email,
        required: true,
        placeholder: t("common.email_address").titleize,
        class: "
          appearance-none
          rounded-none
          relative
          block
          w-full
          px-3
          py-2
          border
          border-gray-300
          placeholder-gray-500
          text-gray-900
          rounded-b-md
          focus:outline-none
          focus:ring-indigo-500
          focus:border-indigo-500
          focus:z-10
          sm:text-sm
        "
      %>
    </div>
  </div>

  <div>
    <%= f.button t("actions.signup"),
      class: "
        group
        relative
        w-full
        flex
        justify-center
        py-2
        px-4
        border
        border-transparent
        text-sm
        font-medium
        rounded-md
        text-white
        bg-indigo-600
        hover:bg-indigo-700
        focus:outline-none
        focus:ring-2
        focus:ring-offset-2
        focus:ring-indigo-500
      " %>
  </div>
<% end %>
